menu "connectivity"

config BLUEU_BT_ENABLE
    bool "Enable BLUEU Bluetooth Stack"
    imply BT_NEED_FIRMWARE
    default n

config BLUESTACK_IF_2_0
    bool "Enable Bluetooth interface of 2.0"
    default y

config BT_NEED_FIRMWARE
    bool "BT need firmware or not"
    default n

endmenu
